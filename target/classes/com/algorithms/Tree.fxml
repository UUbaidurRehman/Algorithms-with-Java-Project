<!-- <?xml version="1.0" encoding="UTF-8"?> -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algorithms.BinaryController">
    <top>
        <Label text="Binary Search Tree Operations" />
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="inputField" promptText="Enter node value" />
            <Button fx:id="insertButton" text="Insert Node" onAction="#insertNode"/>
            <Button fx:id="deleteButton" text="Delete Node" onAction="#deleteNode"/>
            <Button fx:id="searchButton" text="Search" onAction="#searchNode" />
            <Button fx:id="inorderButton" text="Inorder Traversal" onAction="#inorderTraversal"/>
            <Button fx:id="preorderButton" text="Preorder Traversal" onAction="#preorderTraversal"/>
            <Button fx:id="postorderButton" text="Postorder Traversal" onAction="#postorderTraversal"/>
            <TextArea fx:id="resultArea" editable="false" wrapText="true" prefHeight="200" prefWidth="300"/>
            <Button text="Back" onAction="#goBackToPrimary" />
        </VBox>
    </center>
</BorderPane>
